@using MultichoiceCollection.Models
@model MultichoiceCollection.Presentation.Models.ChangePasswordModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";

}
@using (Html.BeginForm("ChangePassword", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "frm-single"}))
{
    @Html.AntiForgeryToken()
<section class="inside">
    <div class="title">
        <img src="@ViewBag.SiteBase/assets/images/logo/heritage-bank.png" width="250" />
    </div>
    <!-- /.title -->
    <div class="frm-title">Login</div>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <!-- /.frm-title -->
    <!-- /.frm-input -->
    <div class="frm-input">
        @Html.PasswordFor(m => m.CurrentPassword, new { @class = "frm-inp", placeholder = "Current Password" })
        <i class="fa fa-lock frm-ico"></i>
    </div>

    <div class="frm-input">
        @Html.PasswordFor(m => m.NewPassword, new { @class = "frm-inp", placeholder = "New Password" })
        <i class="fa fa-lock frm-ico"></i>
    </div>
    <div class="frm-input">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "frm-inp", placeholder = "Confirm Password" })
        <i class="fa fa-lock frm-ico"></i>
    </div>    <!-- /.frm-input -->
    <!-- /.clearfix -->
    <button type="submit" class="frm-submit">Login<i class="fa fa-sign-in"></i></button>
    <!-- /.footer -->
</section>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}